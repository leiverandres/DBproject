<h2> Historico Multas </h2>
<div class="row">
    <% if (multa.length) { %>
      <% for (var i=0; i < multa.length; i++) { %>
        <div class="col s12 m6 l6">
          <div class="card blue-grey darken-1 l6 m6 s12">
            <div class="card-content white-text">
              <h4>ID multa : <%= multa[i].ID_Multa %></h4>
                <ul>
                  <li>
                    <p class="flow-text">
                      ID Agente :
                      <%= multa[i].Agente_Transito.ID_Agente %>
                    </p>
                  </li>
                  <li>
                    <p class="flow-text">
                      Fecha Multa :
                      <%= multa[i].Fecha_Multa.toDateString() %>
                    </p>
                  </li>
                  <li>
                    <p class="flow-text">
                      Departamento :
                      <%= multa[i].dir_Multa.Direccion.Departamento %>
                    </p>
                  </li>
                  <li>
                    <p class="flow-text">
                      Ciudad :
                      <%= multa[i].dir_Multa.Direccion.Ciudad %>
                    </p>
                  </li>
                  <li>
                    <p class="flow-text">
                      Importe :
                      $<%= multa[i].Importe_Multa %>
                    </p>
                  </li>
                </ul>
            </div>
            <div class="card-action">
              <a href="/multas/<%= multa[i].ID_Multa %>">Ver Mas</a>
            </div>
          </div>
        </div>
      <% } %>
    <% } else { %>
      <h2>No hay multas registradas</h2>
    <% } %>
</div>
