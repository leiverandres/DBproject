<h2>Ingresa los nuevos datos para la direcci√≥n</h2>
<p class="flow-text">Direccion id: <%= dir.ID_Direccion %></p>
<div class="row">
  <form action="/admin/direcciones/update?_method=put" method='post' class="col s12">
    <input type="hidden" value="<%= dir.ID_Direccion %>" name="id_dir"">
    <div class="row">
      <div class="input-field col s12 m6 l6">
        <input id="departamento" name="departamento" type="text" class="validate" required="" value="<%= dir.Departamento %>">
        <label for="departamento">Departamento</label>
      </div>
      <div class="input-field col s12 m6 l6">
        <input id="ciudad" name="ciudad" type="text" class="validate" required="" value="<%= dir.Ciudad %>">
        <label for="ciudad">Ciudad</label>
      </div>
    </div>
    <div class="row">
      <div class="input-field col s12 m6 l6">
        <input id="calle" name="calle" type="text" class="validate" required="" value="<%= dir.Calle%>">
        <label for="calle">Calle</label>
      </div>
      <div class="input-field col s12 m6 l6">
        <input name="numero" id="numero" type="text" class="validate" required="" value="<%= dir.Numero %>">
        <label for="numero">Numero</label>
      </div>
    </div>
    <div class="row center">
      <button class="btn waves-effect waves-light" type="submit" name="action">
        Enviar
        <i class="material-icons right">send</i>
      </button>
      <button class="btn waves-effect waves-light" type="cancel" name="cancel" onclick="cancelDirAdd()">
        Cancelar
        <i class="material-icons right">backspace</i>
      </button>
    </div>
  </form>
</div>
